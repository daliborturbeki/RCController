<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.39"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/forward_left_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/fl_btn"
                android:elevation="10dp" />

            <Button
                android:id="@+id/left_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/forward_btn"
                android:elevation="10dp" />

            <Button
                android:id="@+id/reverse_left_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/rl_btn"
                android:elevation="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <Button
                android:id="@+id/forward_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/forward_btn"
                android:elevation="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/mid"
                android:elevation="10dp" />

            <Button
                android:id="@+id/reverse_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/forward_btn"
                android:elevation="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="0.33"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/forward_right_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/fr_btn"
                android:elevation="10dp" />

            <Button
                android:id="@+id/right_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/forward_btn"
                android:elevation="10dp" />

            <Button
                android:id="@+id/reverse_right_btn"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.33"
                android:background="@drawable/rr_btn"
                android:elevation="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bluetooth_connect_btn"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/blue"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.39"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:orientation="vertical">

            <Button
                android:id="@+id/x_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_btn"
                android:elevation="10dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:orientation="vertical">

            <Button
                android:id="@+id/o_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_btn"
                android:elevation="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>